<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WizVault</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SeifDigital.styles.css" asp-append-version="true" />
</head>
<body>
    @{
        var isLogged = (Context.Session.GetString("Status2FA") == "Validat");
        var loginEmail = Context.Session.GetString("LoginEmail");

        var currentController = (ViewContext.RouteData.Values["controller"]?.ToString() ?? "").ToLowerInvariant();
        string active(string c) => currentController == (c ?? "").ToLowerInvariant() ? "active fw-semibold" : "";
    }

    <header>
        <nav id="mainNavbar"
             class="navbar navbar-expand-sm navbar-light bg-white border-bottom fixed-top navbar-compact">

            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="brand-title">WizVault</span>
                    <small class="brand-sub d-block">by Wizrom Software</small>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    @if (isLogged && !string.IsNullOrWhiteSpace(loginEmail))
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link @active("Home")" asp-controller="Home" asp-action="Index">Parole</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @active("Notes")" asp-controller="Notes" asp-action="Index">Notes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @active("Mesaje")" asp-controller="Mesaje" asp-action="Index">Mesaje</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @active("Audit")" asp-controller="Audit" asp-action="Index">Audit</a>
                            </li>
                        </ul>

                        <div class="d-flex align-items-center ms-auto gap-2">
                            <button id="btnTheme"
                                    type="button"
                                    class="btn btn-sm btn-outline-secondary"
                                    title="Schimbă tema">
                                🌙
                            </button>

                            <p class="nav navbar-text mb-0 me-1">
                                Hello, <b>@loginEmail</b>!
                            </p>

                            <form asp-controller="Account"
                                  asp-action="Logout"
                                  method="post"
                                  class="mb-0">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-secondary">
                                    Logout
                                </button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <ul class="navbar-nav flex-grow-1"></ul>
                    }

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container d-flex align-items-center gap-2">
            © 2026
            <img src="~/images/wizrom-logo-footer.png"
                 alt="Wizrom"
                 style="height:auto; width:140px;" />
            -
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    @if (TempData["AccessDenied"] != null)
    {
        <div class="modal fade show" id="accessDeniedModal" tabindex="-1"
             style="display:block; background: rgba(0,0,0,.4);">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title">Acces restricționat</h5>
                    </div>
                    <div class="modal-body">
                        <p>@TempData["AccessDenied"]</p>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" onclick="closeAccessDenied()">OK</button>
                    </div>
                </div>
            </div>
        </div>

        <script>
            function closeAccessDenied() {
                const m = document.getElementById('accessDeniedModal');
                if (m) m.remove();
            }
        </script>
    }

    <script>
        // Fix Back / Forward Cache (IIS + Chrome/Edge)
        window.addEventListener("pageshow", function (event) {
            if (event.persisted) {
                window.location.reload();
            }
        });
    </script>
</body>
</html>

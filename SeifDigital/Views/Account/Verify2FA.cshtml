@{
    ViewData["Title"] = "Verificare 2FA";
    var email = (ViewBag.Email as string) ?? "";
}

<div class="text-center" style="max-width:520px; margin: 40px auto;">
    <h2>Verificare 2FA</h2>
    <p>Am trimis un cod pe email: <b>@email</b></p>

    @if (ViewBag.Mesaj != null)
    {
        <div class="alert alert-danger">@ViewBag.Mesaj</div>
    }

    <form method="post" asp-controller="Account" asp-action="Verify2FA">
        @Html.AntiForgeryToken()

        <div class="mb-3 text-start">
            <label class="form-label">Cod</label>
            <input class="form-control text-center" type="text" name="code" maxlength="6"
                   inputmode="numeric" autocomplete="one-time-code" required />
        </div>

        <div class="d-grid gap-2">
            <button class="btn btn-success" type="submit">Verifică</button>
        </div>
    </form>

    <form method="post" asp-controller="Account" asp-action="Logout" class="mt-3">
        @Html.AntiForgeryToken()
        <button class="btn btn-outline-secondary" type="submit">Înapoi / Logout</button>
    </form>
</div>

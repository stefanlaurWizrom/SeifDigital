@{
    ViewData["Title"] = "Verificare cod";
}

<div class="text-center" style="max-width:520px; margin: 40px auto;">
    <h2>Verificare cod</h2>
    <p class="text-muted">Introdu codul primit pe email (expiră în 10 minute).</p>

    @if (ViewBag.Info != null)
    {
        <div class="alert alert-info">@ViewBag.Info</div>
    }

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form method="post" asp-controller="Account" asp-action="VerifyResetCode">
        @Html.AntiForgeryToken()

        <div class="mb-3 text-start">
            <label class="form-label">Cod</label>
            <input class="form-control" type="text" name="code" inputmode="numeric" autocomplete="one-time-code" required />
        </div>

        <button class="btn btn-primary" type="submit">Verifică</button>

        <div class="mt-3">
            <a asp-controller="Account" asp-action="ForgotPassword">Cere alt cod</a>
        </div>
    </form>
</div>

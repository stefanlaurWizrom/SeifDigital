@{
    ViewData["Title"] = "Login (Email 2FA)";
    var email = (ViewBag.Email as string) ?? "";
}

<div class="container mt-4" style="max-width: 520px;">
    <h3>Login (Email 2FA)</h3>
    <p class="text-muted">
        Introdu adresa ta de email <b>@@wizrom.ro</b> și primești un cod.
    </p>

    @if (ViewBag.Mesaj != null)
    {
        <div class="alert alert-danger">@ViewBag.Mesaj</div>
    }
    @if (ViewBag.Info != null)
    {
        <div class="alert alert-success">@ViewBag.Info</div>
    }

    <hr />

    <form asp-controller="ExternalAuth" asp-action="SendCode" method="post" class="mb-3">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input name="email"
                   class="form-control"
                   placeholder="nume.prenume@wizrom.ro"
                   value="@email"
                   autocomplete="email"
                   required />
        </div>

        <button type="submit" class="btn btn-primary">Trimite cod</button>
    </form>

    <form asp-controller="ExternalAuth" asp-action="VerifyCode" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label class="form-label">Cod</label>
            <input name="codIntrodus"
                   class="form-control"
                   placeholder="123456"
                   inputmode="numeric"
                   autocomplete="one-time-code"
                   required />
        </div>

        <button type="submit" class="btn btn-success">Verifică</button>
    </form>

    <hr />

    <form asp-controller="ExternalAuth" asp-action="Logout" method="post">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-outline-secondary">Logout</button>
    </form>
</div>

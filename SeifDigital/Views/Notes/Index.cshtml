@model List<SeifDigital.Models.UserNote>

@{
    ViewData["Title"] = "Note";

    string q = (string)(ViewBag.Q ?? "");
    int pageNo = (int)(ViewBag.Page ?? 1);
    int pageSize = (int)(ViewBag.PageSize ?? 25);
    int total = (int)(ViewBag.Total ?? 0);

    int totalPages = (int)Math.Ceiling(total / (double)pageSize);
    if (totalPages < 1) totalPages = 1;

    if (pageNo < 1) pageNo = 1;
    if (pageNo > totalPages) pageNo = totalPages;
}

<div class="container mt-4" style="max-width:1100px;">
    @Html.AntiForgeryToken()

    <h2>Note</h2>
    <p class="text-muted">Note personale (Titlu + Conținut, max 255 caractere fiecare). Vizibile doar ție.</p>

    <!-- Add note -->
    <form asp-action="Add" method="post" class="mb-4">
        @Html.AntiForgeryToken()

        <div class="row g-2">
            <div class="col-12">
                <input name="title"
                       class="form-control"
                       maxlength="255"
                       placeholder="Titlu (ex: VPN Prod, Acces server, Idee)..." />
                <small class="text-muted">Maxim 255 caractere.</small>
            </div>

            <div class="col-12">
                <textarea name="text"
                          class="form-control"
                          rows="3"
                          maxlength="255"
                          placeholder="Conținut (max 255)..."></textarea>
                <small class="text-muted">Maxim 255 caractere.</small>
            </div>
        </div>

        <button class="btn btn-primary mt-2" type="submit">Salvează nota</button>
    </form>

    <hr />

    <!-- Header + Total (ca la Parole) -->
    <div class="d-flex justify-content-between align-items-end">
        <div>
            <h4 class="mb-0">Note salvate</h4>
            <div class="text-muted small mt-1">
                @if (!string.IsNullOrWhiteSpace(q))
                {
                    <span>Rezultate pentru: <b>@q</b> • </span>
                }
                <span>Total: <b>@total</b></span>
            </div>
        </div>
    </div>

    <!-- Search (mutat sub "Note salvate", ca la Parole) -->
    <form method="get" class="row g-2 mt-3 mb-3">
        <div class="col-md-8">
            <input class="form-control"
                   name="q"
                   value="@q"
                   placeholder="Caută în titlu sau text..." />
        </div>
        <div class="col-md-2">
            <button class="btn btn-outline-primary w-100" type="submit">Caută</button>
        </div>
        <div class="col-md-2">
            <a class="btn btn-outline-secondary w-100" href="/Notes">Reset</a>
        </div>
    </form>

    <div class="mt-3">
        @if (Model == null || Model.Count == 0)
        {
            <p class="text-muted fst-italic">Nu ai note salvate.</p>
        }
        else
        {
            <div class="list-group">
                @foreach (var n in Model)
                {
                    <div class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="me-3" style="min-width:0;">
                            <div class="fw-semibold text-truncate">@n.Title</div>
                            <div class="mt-1" style="white-space:pre-wrap">@n.Text</div>
                        </div>

                        <div class="text-end" style="min-width:220px;">
                            <div class="text-muted small">@n.UpdatedUtc.ToString("yyyy-MM-dd HH:mm")</div>

                            <a class="btn btn-sm btn-outline-secondary mt-2 w-100"
                               href="/Notes/Edit/@n.Id">
                                Edit
                            </a>

                            <button type="button"
                                    class="btn btn-sm btn-outline-primary mt-2 w-100"
                                    onclick="openSendNoteModal(@n.Id)">
                                Trimite
                            </button>

                            <form asp-action="Delete" method="post" class="mt-2">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@n.Id" />
                                <button class="btn btn-sm btn-outline-danger w-100" type="submit">Șterge</button>
                            </form>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <!-- Pagination -->
    @{
        var prevDisabled = pageNo <= 1;
        var nextDisabled = pageNo >= totalPages;

        var qEsc = Uri.EscapeDataString(q ?? "");
        var prevPage = pageNo - 1;
        var nextPage = pageNo + 1;

        var prevHref = prevDisabled ? "#" : $"/Notes?q={qEsc}&page={prevPage}";
        var nextHref = nextDisabled ? "#" : $"/Notes?q={qEsc}&page={nextPage}";
    }

    <div class="d-flex justify-content-between align-items-center mt-3">
        <div class="text-muted small">
            Pagina <b>@pageNo</b> din <b>@totalPages</b>
        </div>

        <div class="btn-group">
            <a class="btn btn-outline-secondary @(prevDisabled ? "disabled" : "")"
               href="@prevHref"
               tabindex="@(prevDisabled ? "-1" : "0")"
               aria-disabled="@(prevDisabled ? "true" : "false")">
                ‹ Prev
            </a>

            <a class="btn btn-outline-secondary @(nextDisabled ? "disabled" : "")"
               href="@nextHref"
               tabindex="@(nextDisabled ? "-1" : "0")"
               aria-disabled="@(nextDisabled ? "true" : "false")">
                Next ›
            </a>
        </div>
    </div>
</div>

<!-- Modal: Trimite notă -->
<div class="modal fade" id="sendNoteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Notes" asp-action="Send" method="post" class="mb-0">
                @Html.AntiForgeryToken()

                <div class="modal-header">
                    <h5 class="modal-title">Trimite nota</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="id" id="sendNoteId" value="" />

                    <label class="form-label">Email destinatar</label>
                    <input type="text"
                           class="form-control"
                           name="recipientEmail"
                           id="sendNoteRecipientEmail"
                           placeholder="ex: coleg@wizrom.ro"
                           required />
                    <div class="form-text">Introdu emailul utilizatorului din WizVault.</div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Renunță</button>
                    <button type="submit" class="btn btn-primary">Trimite</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openSendNoteModal(id) {
            const hiddenId = document.getElementById("sendNoteId");
            const emailInput = document.getElementById("sendNoteRecipientEmail");

            if (hiddenId) hiddenId.value = id;
            if (emailInput) {
                emailInput.value = "";
                setTimeout(() => emailInput.focus(), 150);
            }

            const modalEl = document.getElementById("sendNoteModal");
            const modal = new bootstrap.Modal(modalEl);
            modal.show();
        }
    </script>
}
